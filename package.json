{
    "name": "bridge-bot",
    "version": "0.0.1",
    "description": "Interlay bot for testing cross-chain bridges",
    "main": "build/index.js",
    "typings": "build/index.d.ts",
    "repository": "https://github.com/interlay/bridge-bot",
    "author": "Interlay",
    "license": "Apache-2.0",
    "scripts": {
        "build": "tsc -p tsconfig.json",
        "start": "node ./build/index.js",
        "live": "ts-node src/index.ts",
        "test": "run-s build test:*",
        "test:integration": "mocha test/**/*.test.ts --timeout 10000000"
    },
    "engines": {
        "node": ">=11"
    },
    "engineStrict": true,
    "dependencies": {
        "@interlay/polkabtc": "0.15.6",
        "@interlay/polkabtc-stats": "0.1.13",
        "@types/big.js": "6.0.2",
        "@types/node": "^14.14.31",
        "@types/underscore": "^1.11.2",
        "@types/yargs": "^16.0.1",
        "big.js": "6.0.3",
        "bitcoinjs-lib": "^5.2.0",
        "npm-run-all": "^4.1.5",
        "typescript": "^4.2.2",
        "underscore": "^1.13.1",
        "yargs": "^17.0.1"
    },
    "devDependencies": {
        "@types/chai": "^4.2.16",
        "@types/mocha": "^8.2.2",
        "chai": "^4.3.4",
        "mocha": "^8.3.2",
        "ts-node": "^9.1.1"
    },
    "mocha": {
        "reporter": "spec",
        "require": "ts-node/register",
        "watch-files": [
            "src/**/*.ts",
            "test/**/*.ts"
        ],
        "recursive": true
    }
}
